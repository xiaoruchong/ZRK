int main()
{
int i, n;
double ret = 1;
double sum = 0;
//scanf("%d", &n);
for (n = 1; n <= 3; n++)
{
ret = ret * n;//n的阶乘

sum = ret + sum;//n阶乘的和
}
printf("%lf", sum);


return 0;
}
