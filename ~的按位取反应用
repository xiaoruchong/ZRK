int main()
{
	int a = 11;
	a = a | (1 << 2);
	printf("%d\n", a);
	//000000000000000000000000000001011 - 11
	//000000000000000000000000000000100 - 1<<2
	//000000000000000000000000000001111 - a|(1<<2）即当前a值
	a = a & (~(1 << 2));//还原
	//000000000000000000000000000000100 - 1<<2
	//111111111111111111111111111111011 - ~1<<2
	//000000000000000000000000000001111 - 当前a值
	//000000000000000000000000000001011 - a & (~(1 << 2)) 赋予a的值
	//int a = 0;
	//~ 按二进制位取反。
	//000000000000000000000000000000000 补码按位取反
	//111111111111111111111111111111111 -补码
	//111111111111111111111111111111110 -反码
	//100000000000000000000000000000001 -原码  值为-1
	printf("%d\n", a);
	return 0;
}
