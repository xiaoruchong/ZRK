int main()
{
	int arr[] = { 1,2,3,4,5,6,7,8,9,0 };
	printf("%p\n", arr);//数组名是数组首个元素的地址
	printf("%p\n", &arr[0]);//数组名是数组首个元素的地址
	printf("%d\n", *arr);//首元素的地址进行解引用，1
	//sizeof(arr);//arr代表整个数组，
	//计算的是整个数组的大小，单位是字节；
	printf("%p\n", &arr);//arr代表整个数组的地址，取出整个数组的地址
	//此时打印出的是数组arr地址的起始位的地址
	printf("%p\n", &arr+1);
	//此时打印则是整个数组结束时的地址
	return 0;
}
