int main()
{
char arr1[] = "welcome to bit!!!!!!!";
char arr2[] = "#####################";
int left = 0;
//int sz = sizeof(arr1) / sizeof(arr1[0]);//数组后面默认有\0,sizeof计算占用一个空间
//int right = sz-2;
int right = strlen(arr1)-1;
//printf("%s\n", arr2);
for (left = 0;left <= right;left++,right--)
{

arr2[left] = arr1[left];
arr2[right] = arr1[right];
printf("%s\n", arr2);
//Sleep(1000);//休息（毫秒）
//system("cls");//执行系统命令，cls 清空屏幕
}
printf("%s", arr2);
return 0;
}
